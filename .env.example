# MongoDB Connection String
# Replace with your MongoDB Atlas cluster URI
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret Key
# Use a strong, random secret key for signing JWT tokens
JWT_SECRET=your_jwt_secret_key_here_use_a_strong_random_string

# Server Port
# The port on which the backend server will run
PORT=5000

# Environment
# Set to 'development' for local testing or 'production' for deployed systems
NODE_ENV=development
