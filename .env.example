# MongoDB Connection String
# Use your MongoDB Atlas cluster URI
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database_name>?retryWrites=true&w=majority

# Server Port
# The port on which the backend server will run
PORT=5000

# Frontend URL
# The URL of your frontend application
FRONTEND_URL=http://localhost:3000

# Email (SMTP) Configuration
# The email account that will send verification messages
EMAIL_USER=<your_email_here>
EMAIL_PASS=<your_app_password_here>  # App Password from Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_FROM="UAPMP <your_email_here>"
